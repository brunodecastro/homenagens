# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/                           controllers.Usuarios.index()

GET		/login                      controllers.Application.login() 
POST	/login                      controllers.Application.autenticar() 
GET		/logout                     controllers.Application.logout()

GET		/contas/index               controllers.Contas.index()
GET		/contas                  	controllers.Contas.listPage(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")
POST	/contas                  	controllers.Contas.salvar()
GET		/contas/nova                controllers.Contas.criar()
GET		/contas/:id              	controllers.Contas.editar(id:Long)


GET		/usuarios                  	controllers.Usuarios.index()
GET		/usuarios/list              controllers.Usuarios.list(p:Int ?= 0, s ?= "nome", o ?= "asc", f ?= "")
GET		/usuarios/new               controllers.Usuarios.create()
POST	/usuarios                  	controllers.Usuarios.save()
GET		/usuarios/:id              	controllers.Usuarios.edit(id:Long)
POST	/usuarios/:id              	controllers.Usuarios.update(id:Long)
POST	/usuarios/:id/delete		controllers.Usuarios.delete(id:Long)

# TipoHomenagem
GET		/tipoHomenagens							controllers.TipoHomenagens.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")
GET		/tipoHomenagens/new						controllers.TipoHomenagens.create()
POST	/tipoHomenagens							controllers.TipoHomenagens.save()
GET		/tipoHomenagens/:id						controllers.TipoHomenagens.edit(id:Long)
POST	/tipoHomenagens/:id						controllers.TipoHomenagens.update(id:Long)
POST	/tipoHomenagens/:id/delete				controllers.TipoHomenagens.delete(id:Long)

GET		/tipoHomenagens/:parentId/sub/new				controllers.TipoHomenagens.createSub(parentId:Long)
POST	/tipoHomenagens/:parentId/sub					controllers.TipoHomenagens.saveSub(parentId:Long)
GET		/tipoHomenagens/sub/:id							controllers.TipoHomenagens.editSub(id:Long)
POST	/tipoHomenagens/:parentId/sub/:id				controllers.TipoHomenagens.updateSub(parentId:Long, id:Long)
POST	/tipoHomenagens/sub/:id/delete					controllers.TipoHomenagens.deleteSub(id:Long)

# Homenagens
#GET		/homenagens							controllers.Homenagens.list(p:Int ?= 0, s ?= "descricao", o ?= "asc", f ?= "")
GET		/homenagens							controllers.Homenagens.list(p:Int ?= 0, s ?= "descricao", o ?= "asc")
GET		/homenagens/new						controllers.Homenagens.create()
POST	/homenagens							controllers.Homenagens.save()
GET		/homenagens/:id						controllers.Homenagens.edit(id:Long)
POST	/homenagens/:id						controllers.Homenagens.update(id:Long)
POST	/homenagens/:id/delete				controllers.Homenagens.delete(id:Long)

# Image Upload
POST	/image						controllers.ImageController.uploadImage()
GET		/image/:id					controllers.ImageController.getImage(id: Long)
DELETE	/image/:id					controllers.ImageController.deleteImage(id: Long)
GET		/thumbnail/:id				controllers.ImageController.getThumbnail(id: Long)

GET		/image						controllers.ImageController.getAllImages()

# PDF
GET		/jasper/:reportFile						controllers.ReportController.jasperDocument(reportFile: String)

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file               controllers.Assets.at(path="/public", file)

